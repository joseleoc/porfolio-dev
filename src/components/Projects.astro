---
import Description from "./Description.astro";
import { Image } from "astro:assets";
import { PROJECTS } from "../Globals.json";
import Tags from "./Tags.astro";

const projects = PROJECTS;
---

{
  projects.map(({ title, description, tags, icon, id }) => (
    <article>
      <h3 class="mb-2 text-xl font-semibold text-yellow-200 md:text-2xl">
        {title}
      </h3>

      <div class="flex flex-col items-center justify-center gap-2 md:flex-row md:gap-4">
        <Image
          src={icon}
          alt={`Icono del proyecto ${title}`}
          class="size-24 rounded hover:scale-105 md:size-32"
          width={96}
          height={96}
        />

        <div class="max-w-full overflow-hidden">
          <Description class="mb-4 text-pretty text-base md:text-xl">
            {description}
          </Description>
          <Tags tags={tags} />{" "}
          <a
            class="inline-flex items-end text-lg font-medium text-yellow-200 hover:text-yellow-300"
            role="link"
            href={`/projects/${id}`}
          >
            See more...
          </a>
        </div>
      </div>
    </article>
  ))
}
